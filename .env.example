# AI Service Configuration
# Copy this file to .env.local and add your API keys

# OpenAI Configuration (Primary)
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_AI_API_URL=https://api.openai.com/v1
REACT_APP_AI_MODEL=gpt-3.5-turbo

# Alternative: Claude/Anthropic Configuration
REACT_APP_CLAUDE_API_KEY=your_claude_api_key_here

# Alternative: Custom AI API Configuration
# REACT_APP_AI_API_KEY=your_custom_api_key_here
# REACT_APP_AI_API_URL=https://your-custom-api-endpoint.com/v1
# REACT_APP_AI_MODEL=your_model_name

# Development Mode (set to 'local' to use mock responses)
REACT_APP_AI_MODE=api